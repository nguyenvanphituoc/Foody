<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_inline_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_toast"
    android:gravity="center|fill_horizontal"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/custom_inline_item_tImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/contentDesciption_Adds"
        android:scaleType="fitXY"
        android:src="@mipmap/foody_logo" />

    <TextView
        android:id="@+id/custom_inline_item_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal|center"
        android:paddingEnd="5dp"
        android:paddingStart="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:text="content"
        android:textColor="@color/clBlack"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/custom_inline_item_StatusView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/simple_corner_clred"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:text="status"
        android:textColor="@color/clWhite"
        android:textSize="@dimen/text_size_small" />
</LinearLayout>