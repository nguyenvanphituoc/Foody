<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_inline_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/clGrey"
    android:gravity="center|fill_horizontal"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/custom_inline_item_tImageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:contentDescription="@string/FOODY_TItlE"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/custom_inline_item_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:gravity="center_horizontal|center"
        android:paddingEnd="5dp"
        android:paddingStart="10dp"
        android:textColor="@color/clBlack"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/custom_inline_item_StatusView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:textColor="@color/clWhite"
        android:textSize="@dimen/text_size_small" />
</LinearLayout>