<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/clWhite" android:dashGap="3dp" />
            <corners android:radius="360dp" />
            <gradient android:centerColor="@color/clWhite" android:endColor="@color/clGrey" android:startColor="@color/clGrey" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/clWhite" />
            <corners android:radius="5dp" />
            <gradient android:centerColor="@color/clGrey" android:endColor="@color/clWhite" android:startColor="@color/clWhite" />
        </shape>
    </item>
</selector>