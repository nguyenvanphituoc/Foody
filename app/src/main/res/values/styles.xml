<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="colorPrimary">@color/clRed</item>
        <item name="colorPrimaryDark">@color/clBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OnTopToolBar" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/custom_toolbar_ontop</item>
        <item name="tabIndicatorColor">@color/clGrey</item>
        <item name="tabSelectedTextColor">@color/clBlack</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabIndicatorHeight">5dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabTextColor">@color/grey05</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/clBlack</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>
